</head>

<body>
    <div class="news-category">
        <form action="/">
            <button id="clear" type="submit">к выбору новостей</button>
        </form>
    </div>
    <div class="container">
        {{#each news}}
        <div id="politic" class="news-box">
            <span>{{this.time}}</span>
            <span>{{this.source}}</span>
            <h3>{{this.title}}</h3>
            <p>{{this.body}}</p>
            <a href="{{this.href}}">Подробнее..</a>
        </div>
        {{/each}}
    </div>
    </div>

</body>

</html>